@model Demo_Product.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Profil bilgileri</h1>
<form method="post">
    <label>Ad</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Soyad</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
    <label>Mail</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    <label>Cinsiyet</label>

    <select asp-for="Gender" class="form-control">
        <option value="">Lütfen Seçim Yapınız.</option>
        <option value="Female">Kadın</option>
        <option value="Male">Erkek</option>
    </select>
    <br />
    <label>Şifre</label>
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    <label>Şifre Tekrar</label>
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <span asp-validation-for="ConfirmPassword" style="color:red"></span>

    <br />
    <button class="btn btn-primary">Güncelle</button>

</form>
