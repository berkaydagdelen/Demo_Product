@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<h1>KATEGORİ LİSTESİ</h1>
<br />
<a href="/Category/AddCategory/" class="btn btn-outline-primary">EKLE</a>
<br />
<br />
<table class="table table-hover">

    <tr>

        <th>#</th>
        <th>AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.NAME</td>
            <td><a href="/Category/DeleteCategory/@item.ID" class="btn btn-outline-danger">SİL</a></td>
            <td><a href="/Category/UpdateCategory/@item.ID" class="btn btn-outline-success">GÜNCELLE</a></td>
        </tr>

    }



</table>
